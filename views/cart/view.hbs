<h3>Shopping Cart</h3>
{{#if products}}
<div class="row">
  <div class="col-sm-6 col-md-offset-3 col-sm-offset-3">
    <ul class="list-group">
      {{# each products}}
      <li class="list-group-item">
        <span class="badge">{{this.qty}}</span>
        <strong>{{ this.item.name}}</strong>
        <span class="label label-success">$ {{this.item.unitprice}}</span>
        <div class="btn-group">
          <button class="btn btn-primary dropdown-toggle" type="button" data-toggle="dropdown">Actions<span class="caret"></span></button>
          <ul class="dropdown-menu">
            <li><a href="/reduce/{{this.item.id}}">Remove one</a></li>
            <li><a href="/remove/{{this.item.id}}">Remove all</a></li>
          </ul>
        </div>
      </li>
       {{/ each}}
    </ul>
  </div>
</div>

<div class="row">
  <div class="col-sm-6 col-md-offset-3 col-sm-offset-3">
    <strong> Total : ${{totalPrice}}</strong>
  </div>
</div>

<div class="row">
  <div class="col-sm-6 col-md-offset-3 col-sm-offset-3">
    <a href="/"><button type="button" class="btn btn-primary">Continue Shopping</button></a>
    <a href="/checkout"><button type="button" class="btn btn-success">Checkout <span class="glyphicon glyphicon-play"/></button></a>
  </div>
</div>

{{ else }}
  <div class="row">
    <div class="col-sm-6 col-md-offset-3 col-sm-offset-3">
      <img src="/images/cart/emptycart.png"/>
      <h2>Your Shopping Cart is currently <b>empty</b>. </h2>
      <a href="/"><button type="button" class="btn btn-primary">Continue Shopping</button></a>
    </div>
  </div>
{{/if}}
