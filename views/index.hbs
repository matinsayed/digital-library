{{#if successMsg}}
<div class="alert alert-success">
  <strong>Success!</strong> {{ successMsg }}
</div>
{{/if}}

<h3>Categories</h3>
(<a href="/products/">show all</a>)
<br/><br/>
<div class="container-fluid">
  <div class="row">
    {{# each categories}}
    <div class="col-sm-6 col-md-4">
      <div class="thumbnail">
        <img src="/images/categories/{{imagepath}}" alt="{{name}}" class='img-responsive'>
        <div class="caption">
          <h3>{{name}} ({{productcount}})</h3>
          <a href="/products?id={{id}}" class="btn btn-success" role="button">View Books</a>
        </div>
      </div>
    </div>
    {{/each}}
  </div>
</div>
